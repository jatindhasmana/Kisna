<% layout("layouts/boilerplate.ejs") %>

    <body>
        <h3>Create New Listing</h3>
        <div class="row">
            <div class="col-8 offset-2">
                <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="formGroupExampleInput" class="form-label">Your Title</label>
                        <input name="listing[title]" type="text" class="form-control" id="formGroupExampleInput"
                            placeholder="Enter Title" required>
                            <div class="valid-feedback">Title looks good</div>
                            <div class="invalid-feedback">Title should be valid</div>
                    </div>
                    <div class="mb-3">
                        <label for="exampleFormControlTextarea1" class="form-label">Description</label>
                        <textarea name="listing[description]" class="form-control" id="exampleFormControlTextarea1"
                            rows="3" required></textarea>
                            <div class="invalid-feedback">Please enter short description</div>
                    </div>

                    <div class="mb-3">
                        <label for="formFile" class="form-label">Upload Listing Image</label>
                        <input name="listing[image]" class="form-control" type="file" id="formFile" required>
                        <div class="invalid-feedback">Please upload an image</div>
                    </div>
                    
                    <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="formGroupExampleInput" class="form-label">Price</label>
                        <input name="listing[price]" type="text" class="form-control" id="formGroupExampleInput"
                            placeholder="Enter Price" required>
                            <div class="invalid-feedback">Price should be valid</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="formGroupExampleInput" class="form-label">Country</label>
                        <input name="listing[country]" type="text" class="form-control" id="formGroupExampleInput"
                            placeholder="Enter Country" required>
                            <div class="invalid-feedback">Country name should be valid</div>
                    </div>
                    </div>
                    <div class="mb-3">
                        <label for="formGroupExampleInput" class="form-label">Location</label>
                        <input name="listing[location]" type="text" class="form-control" id="formGroupExampleInput"
                            placeholder="Enter Your Location" required>
                            <div class="invalid-feedback">Location should be valid</div>
                    </div>
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </body>
