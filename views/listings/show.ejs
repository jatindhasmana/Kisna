<% layout("layouts/boilerplate.ejs") %>

    <h3>Listing Details: </h3>
    <div class="row">
        <div class="col col-6 offset-2">
            <div class="card show-img" style="width: 18rem;">
                <img src="<%= listing.image %>" class="card-img-top" alt="...">
                <div class="card-body">
                        <b>
                            <%= listing.title %>
                        </b><br>
                            <%= listing.description %><br>
                             &#x20B9; <%= listing.price.toLocaleString("en-IN") %><br>
                            <%= listing.location %><br>
                            <%= listing.country %>
                </div>
            </div>
        </div>
    </div>
    <div class="btns">
        <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
            <a class="btn btn-dark" href="/listings/<%= listing._id %>/edit">Edit</a>
            <button class="btn btn-danger">DELETE</button>
        </form>
    </div>
    </body>