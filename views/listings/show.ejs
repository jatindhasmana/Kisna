<% layout("layouts/boilerplate.ejs") %>

    <h3 class="offset-2">
        <%= listing.title %>
    </h3>
    <div class="row offset-2">
        <div class="col col-6">
            <div class="card listing-card show-img">
                <img src="<%= listing.image %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <br>
                    <%= listing.description %><br>
                        &#x20B9; <%= listing.price.toLocaleString("en-IN") %><br>
                            <%= listing.location %><br>
                                <%= listing.country %>
                </div>
            </div>
        </div>
    </div>
    <div class="btns">
        <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
            <a class="btn btn-dark" href="/listings/<%= listing._id %>/edit">Edit</a>
            <button class="btn btn-danger">DELETE</button>
        </form>
    </div>
    <hr>
    <div class="mb-3 mt-3">
        <h4>Leave a Review</h4>
        <form style="width: 50%; margin:auto" action="/listings/<%= listing._id %>/reviews" method="post" novalidate
            class="needs-validation">
            <div>
                <label class="form-label" for="rating">Rating</label>
                <input type="range" name="review[rating]" id="rating" min="1" max="5">
            </div>
            <label class="form-label" for="comment">Comment</label><br>
            <textarea class="form-control" name="review[comment]" id="comment" cols="20" rows="4" required></textarea>
            <div class="invalid-feedback">Please submit some comments for Review</div>
            <button class="btn btn-outline-primary mt-2" type="submit">Submit</button>
        </form>
    </div>
    <hr>
    <p><b>All Reviews</b></p>
    <div class="row offset-2">
        <% for(let review of listing.reviews){ %>
            <div class="card col-4 ms-3 mb-3">
                <div class="card-body">
                    <div class="card-title">John Doe</div>
                    <div class="card-text">
                        <%= review.comment %>
                    </div>
                    <div class="card-text">
                        <%= review.rating %> Stars
                    </div>
                    <form class="mb-2" method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                        <button class="btn btn-sm btn-dark">Delete</button>
                    </form>
                </div>
            </div>
            <% } %>
    </div>
    </body>